# =============================================================================
# TruAxisVentures E-Commerce Platform - Environment Configuration
# =============================================================================
# IMPORTANT: Copy this file to .env and update with your actual values
# Never commit .env file to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Flask Application Settings
# -----------------------------------------------------------------------------
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=True

# -----------------------------------------------------------------------------
# Security Keys
# -----------------------------------------------------------------------------
# IMPORTANT: Generate strong, unique keys for production
# Generate using: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production

# JWT token expiration (in hours)
JWT_ACCESS_TOKEN_EXPIRES=24
JWT_REFRESH_TOKEN_EXPIRES=720

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# Database Type: mysql, postgresql, sqlite
DB_TYPE=mysql

# MySQL/PostgreSQL Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=truaxis_db
DB_USER=root
DB_PASSWORD=

# SQLite Configuration (only used if DB_TYPE=sqlite)
# DB_FILE=truaxis.db

# Database Connection Options
DB_CHARSET=utf8mb4
DB_POOL_SIZE=10
DB_POOL_RECYCLE=3600
DB_POOL_TIMEOUT=30
DB_MAX_OVERFLOW=20

# SQLAlchemy Settings
SQLALCHEMY_TRACK_MODIFICATIONS=False
SQLALCHEMY_ECHO=False

# -----------------------------------------------------------------------------
# Domain Configuration
# -----------------------------------------------------------------------------
# Main Website Domain
MAIN_DOMAIN=truaxis.com
MAIN_URL=https://truaxis.com

# Admin Domain
ADMIN_DOMAIN=admin.truaxis.com
ADMIN_URL=https://admin.truaxis.com

# API Domain/URL
API_DOMAIN=api.truaxis.com
API_URL=https://api.truaxis.com

# Local Development URLs (uncomment for local development)
# MAIN_URL=http://localhost:5173
# ADMIN_URL=http://admin.localhost:5173
# API_URL=http://localhost:5000

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=https://truaxis.com,https://admin.truaxis.com,http://localhost:5173,http://admin.localhost:5173

# CORS Settings
CORS_SUPPORTS_CREDENTIALS=True
CORS_MAX_AGE=3600

# -----------------------------------------------------------------------------
# File Upload Configuration
# -----------------------------------------------------------------------------
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif,webp

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
ITEMS_PER_PAGE=20
SESSION_TIMEOUT=60

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FILE=logs/truaxis.log
LOG_SQL_QUERIES=False

# -----------------------------------------------------------------------------
# Email Configuration (Optional)
# -----------------------------------------------------------------------------
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USE_SSL=False
# MAIL_USERNAME=your-email@example.com
# MAIL_PASSWORD=your-app-password
# MAIL_DEFAULT_SENDER=noreply@truaxis.com

# -----------------------------------------------------------------------------
# Payment Gateway Configuration (Optional)
# -----------------------------------------------------------------------------
# RAZORPAY_KEY_ID=your_razorpay_key_id
# RAZORPAY_KEY_SECRET=your_razorpay_key_secret
# STRIPE_PUBLIC_KEY=your_stripe_public_key
# STRIPE_SECRET_KEY=your_stripe_secret_key

# -----------------------------------------------------------------------------
# Cloud Storage Configuration (Optional)
# -----------------------------------------------------------------------------
# USE_S3_STORAGE=False
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_S3_BUCKET=truaxis-uploads
# AWS_S3_REGION=us-east-1
# AWS_S3_CUSTOM_DOMAIN=cdn.truaxis.com

# -----------------------------------------------------------------------------
